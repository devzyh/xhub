<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.devzyh.xhub.notebook.mapper.NoteHistoryMapper">

    <resultMap type="NoteHistory" id="NoteHistoryResult">
        <result property="id" column="id"/>
        <result property="contentId" column="content_id"/>
        <result property="catalogId" column="catalog_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="rank" column="rank"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectNoteHistoryVo">
        select id,
               content_id,
               catalog_id,
               title,
               content,
               rank,
               create_by,
               create_time,
               update_by,
               update_time,
               remark
        from note_history
    </sql>

    <select id="selectNoteHistoryList" resultMap="NoteHistoryResult">
        <include refid="selectNoteHistoryVo"/>
        <where>
            <if test="data.contentId != null ">and content_id = #{data.contentId}</if>
            <if test="data.catalogId != null ">and catalog_id = #{data.catalogId}</if>
            <if test="data.title != null ">and title = #{data.title}</if>
            <if test="data.content != null and data.content != ''">and content = #{data.content}</if>
            <if test="data.rank != null ">and rank = #{data.rank}</if>
        </where>
        order by create_time desc
    </select>

</mapper>
